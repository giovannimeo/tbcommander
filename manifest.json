{
    "name": "tbsearchui",
    "description": "Addon that gives a command line to thunderbird to perform search (WebExtension)",
    "manifest_version": 2,
    "version": "1.0.0",
    "homepage_url": "https://github.com/giovannimeo/tbsearchui",
    "permissions": [
        "menus",
        "messagesRead",
        "tabs"
    ],
    "icons": {
        "128": "icons/tbsearchui128.png"
    },
    "background": {
        "scripts": ["tbsearchuiBackground.js"]
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": {
            "128" : "icons/tbsearchui128.png"
        },
        "default_title": "tbsearchui",
        "default_popup": "tbsearchui.html"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": { "default": "Ctrl+Space" },
            "description": "Open the search dialog"
        },
        "filterBySubject": {
            "suggested_key": { "default": "Ctrl+Shift+9" },
            "description": "Do the search On Subject"
        },
        "filterByAuthor": {
            "suggested_key": { "default": "Ctrl+Shift+0" },
            "description": "Do the search On Author"
        }
    },
    "applications": {
        "gecko": {
            "id": "tbsearchui@runningcode.it"
        }
    }
}
